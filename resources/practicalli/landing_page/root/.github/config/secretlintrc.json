{
  "rules": [
    {
    "id": "@secretlint/secretlint-rule-basicauth",
    "options": {
      "allows": [
        "hostname.domain.com",
        "jdbc:postgresql://<hostname>:port/<database-name>?user=<username>&password=<password>",
        "postgres://postgres://username:password@hostname.domain.com:1234/database-name"
      ]
    }
  }
  ]
}
